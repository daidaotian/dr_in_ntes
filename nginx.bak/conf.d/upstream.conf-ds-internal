# -*- Mode: Nginx -*-

upstream ds-api-service {
    server 10.200.165.218:8000;
    server 10.200.165.219:8000;
    server 10.200.165.220:8000;
    server 10.200.165.221:8000;
    check interval=3000 rise=2 fall=3 timeout=5000 type=http default_down=false;
    check_http_send "GET /health/status HTTP/1.0\r\n\r\n";
    check_http_expect_alive http_2xx http_3xx;
    keepalive 64;
}

upstream ds-portrait-query {
