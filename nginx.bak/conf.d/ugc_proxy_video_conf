proxy_hide_header Vary;
proxy_set_header Accept-Encoding ' ';
proxy_set_header X-Real-IP $remote_addr;
proxy_set_header REMOTE-HOST $remote_addr;
proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
proxy_set_header RemoteAddr $remote_addr;
proxy_set_header RemoteHost $remote_addr;

proxy_connect_timeout 5s;
proxy_send_timeout 2m;
proxy_read_timeout 2m;

proxy_temp_file_write_size 2048m;
proxy_buffer_size 32k;
proxy_buffers 4 32k;
proxy_busy_buffers_size 64k;

proxy_ignore_client_abort off;

if ( $http_origin ~ (127.0.0.1|163.com|126.net|netease.com|youdao.com|dy.163.com|t2.dy.163.com) ){
    add_header Access-Control-Allow-Headers 'Origin,Content-Range,X-Session-ID,Content-Disposition,Content-Type,X-Requested-With';
    add_header Access-Control-Allow-Origin $http_origin;
    add_header Access-Control-Allow-Credentials "true";
    add_header Access-Control-Allow-Methods 'POST,GET,OPTIONS,HEAD';
}
